@{
    Layout = "../Layout/_Header.cshtml";
}
@section head{
<style>
    .header {
        height: 40px;
    }

        .header .nav li {
            float: left;
        }

        .header .user_info {
            float: right;
        }

    .manager_content {
        margin-left:200px;
        min-width:1000px;
        padding: 20px;
    }

    .common_table td, .common_table th {
        border: 1px solid #000;
        padding: 5px 10px;
    }
    /*分页样式*/
    .page {
        margin: 20px 0;
        line-height: 20px;
        text-align: center;
    }

        .page a, .page b {
            display: inline-block;
            *display: inline;
            *zoom: 1;
            border: 1px #8CA9CC solid;
            background-color: #FFF;
            padding-left: 7px;
            padding-right: 7px;
            height: 20px;
            color: #1f366d;
            cursor: pointer;
            margin-right: 5px;
            font-weight: 400;
            border-radius: 2px;
        }

            .page b, .page a.current, .page a:hover {
                border: 1px #4C6A8C solid;
                background-color: #8BBBE9;
                color: #fff;
            }

        .page input {
            box-sizing: content-box;
            line-height: 22px;
            height: 22px;
            border: 1px solid #8CA9CC;
            border-radius: 2px;
            height: 16px;
            width: 40px;
            line-height: 16px;
            border-right: 0;
            vertical-align: top;
            border-radius: 2px 0 0 2px;
        }

            .page input:focus {
                box-shadow: 0 0 5px #A4C6FD;
                outline: -webkit-focus-ring-color auto 5px;
            }

    ._temp_border {
        border: 1px solid #000;
    }
    
    .common-form {
        padding: 20px;
        position: relative;
    }

        .common-form legend {
            display: block;
            box-sizing: content-box;
            width: 100%;
            line-height: inherit;
            border-bottom: 1px solid #e5e5e5;
            margin: 0 0 20px 0;
        }

            .common-form legend h2 {
                font-size: 18px;
                font-weight: 600;
                margin: 0 0 -1px;
                line-height: 38px;
                border-bottom: solid 3px #008df3;
                display: inline-block;
            }

        .common-form .reg-entry {
            position: absolute;
            top: 30px;
            right: 20px;
        }

        .common-form .form-group {
            margin: 0 auto 15px;
            position: relative;
        }

        .common-form .form-control {
            width: 200px;
            height: 22px;
            padding: 4px 8px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 2px;
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            -webkit-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            -moz-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            -ms-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

    body .common-form .btn-default, body .common-form .btn-primary {
        display: block;
        width: 100%;
        padding: 12px 0;
    }

    .manager-area {
        overflow: hidden;
        zoom: 1;
        height:100%
    } 
    .sidebar {
        width: 190px;
        padding: 5px;
        float: left;
        background: #232c3b;
        font-size: 12px;
        background: #232c3b;
        padding-bottom: 10000px;
        margin-bottom: -10000px;
    }
        .sidebar li {
            background: #35404d;
            border-radius:4px;
            line-height:49px;
            padding-left:17px;
            margin-bottom:5px;
        }
        .sidebar a {
            color: #fff;
            display:block;
        }
            .sidebar a:hover {
                color: #ff6c60;
            }
</style>
@RenderSection("head", false)
}
<div class="manager-area">
    <ul class="sidebar">
        <li><a href="@Url.Action("edit", "bill", new { id = String.Empty })" @(Url.IsCurrent("edit", "bill") ? "class=\"current\"" : String.Empty)>创建单个运单</a></li>
        <li><a href="@Url.Action("list", "bill")" @(Url.IsCurrent("list", "bill") ? "class=\"current\"" : String.Empty)>运单列表</a></li>
    </ul>
    <div class="manager_content">
        @RenderBody()
    </div>
</div>