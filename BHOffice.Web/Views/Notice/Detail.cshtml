@model BHOffice.Web.Models.Notice.DetailModel
@{
    ViewBag.Title = "公共详细";
    Layout = "../Layout/_Header.cshtml";
}
@section head{
    <style>
        .notice-detail{
            width:1080px;
            overflow:hidden;
            margin:20px auto 0;
        }
        .notice-title {
            padding:0 6px;
            border-bottom:1px #aaa solid
        }
        .notice-title h2{
            margin-bottom:15px;
        } 
        .notice-title p {
            font-size: 12px;
            color: #555;
            text-align: right;
            line-height:2em
        }
        .notice-content{
            padding:15px 6px 0;
            font-size:12px;
            line-height:1.75em;
        }
    </style>
}
<div class="notice-detail">
    <div class="notice-title">
        <h2>@Model.Title</h2>
        <p>时间：@Model.Date.ToString("yyyy/MM/dd")</p>
    </div>
    <div class="notice-content">
        @Html.HtmlString(System.Web.HttpUtility.HtmlDecode(Model.Content))
    </div>
</div>