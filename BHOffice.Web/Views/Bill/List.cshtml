@model BHOffice.Web.Models.Bill.ListModel
@{
    ViewBag.Title = "运单列表";
    Layout = "../Layout/_ManagerLeft.cshtml"; 
}
@section head{
    <link rel="stylesheet" type="text/css" href="/Resources/css/jquery.datetimepicker.min.css" />
}
<script type="text/javascript" src="/Resources/Js/jquery.datetimepicker.full.min.js"></script>
<div>
    <form action="@Url.Action("list")" enctype="application/x-www-form-urlencoded" method="get">
        <table class="common-form">
            <tr>
                @if (Model.IsDisplayTrackButton)
                {
                <td>创建者：</td>
                <td><input name="Creater" value="@Model.Query.Creater" class="form-control" /></td>
                }
                else
                {
                    <td></td><td></td>
                }
                <td>单号：</td>
                <td><input name="No" value="@Model.Query.No" class="form-control" /></td>
                <td>状态：</td>
                <td>
                    @Html.DropDownList("State", Util.GetBillStateSelectList(Model.Query.State), "--运单状态--")
                </td>
            </tr>
            <tr>
                <td>收件人：</td>
                <td><input name="Receiver" value="@Model.Query.Receiver" class="form-control" /></td>
                <td>创建时间：</td>
                <td>
                    <input name="MinCreated" value="@Html.DisplayFor(m => m.Query.MinCreated)" class="form-control" />
                    到
                    <input name="MaxCreated" value="@Html.DisplayFor(m => m.Query.MaxCreated)" class="form-control" />
                </td>
                <td colspan="2">
                    <input value="搜索" type="submit" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </form>
</div>
<table class="common_table">
    <thead>
        <tr>
            <th>代理商</th>
            <th>订单号</th>
            <th>创建者</th>
            <th>创建时间</th>
            <th>收件人</th>
            <th>收件地址</th>
            <th>状态</th>
            <th>功能</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {            
            <tr>
                <td>@item.AgentName</td>
                <td>@item.No</td>
                <td>@item.CreaterName</td>
                <td>@item.Created.ToString("yyyy/MM/dd HH:mm:ss")</td>
                <td>@item.ReceiverName</td>
                <td>@item.ReceiverAddr</td>
                <td>@item.StateName</td>
                <td>
                    <a target="_blank" href="@Url.Action("Edit", new { id = item.Bid })">编辑</a>                    
                    &nbsp;
                    <a href="#" data-bid="@item.Bid" class="j-del">删除</a>                    
                    &nbsp;
                    @if (Model.IsDisplayTrackButton) 
                    {       
                    <a target="_blank" href="@Url.Action("Track", new { id = item.Bid })">追踪</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    (function () {
        $(".j-del").click(function () {
            var bid = $(this).data("bid");
            if (confirm("删除后不可恢复，确定要删除么？")) {
                $.ajax({
                    url: "@Url.Action("Del")",
                    data: { bid: bid },
                    type: "post",
                    dataType: "text json",
                    success: function (data) {
                        if (data.code == 0) {
                            location.reload();
                        } else {
                            alert(data.msg);
                        }
                    },
                    error: function () {
                        alert("出错了，请重试！");
                    }
                });
                return false;
            }
        });
        $.datetimepicker.setLocale('ch');
        $("[name=MinCreated],[name=MaxCreated]").datetimepicker({ timepicker: false, format:'Y/m/d' });
    })();
</script>
