        </div>
        <div class="symbiosis">
            <h3>合作伙伴</h3>
            <p>
                <a href="http://www.fedex.com/cn/" target="_blank">
                    <img src="/Resources/Image/fedex-express.png" alt="fedex" />
                </a>
                <a href="http://www.yundaex.com/" target="_blank">
                    <img src="/Resources/Image/yundaex.png" alt="fedex" />
                </a>
            </p>
        </div>
        <div style="clear:both"></div>
    </div>
</footer>

<script type="text/javascript">
    $(function () {
        var $box = $(".order-search-box");
        var $input = $(".input-area", $box),
            $orders = $(".input-order", $box),
            $clear = $(".clear-order", $box),
            $search = $(".order-btn-box .btn-primary"),
            $searchResult = $(".order-search-result");
        var orders = [], searching = false;

        $input.on("keyup", function (event) {
            if (event.which == 229 || event.which == 188 || event.which == 32 || event.which == 13)
            {
                var val = $input.val();
                val = $.trim(val.slice(0, val.length - 1));
                createItem(val);
                return false;
            }
        });
        $input.blur(function () {
            var val = $.trim($input.val());
            if (val) {
                createItem(val);
            }
        });

        $clear.click(function () {
            if (confirm("清除所有单号？")) {
                orders = [];
                $(".order-num", $box).remove();
            }
        });


        $search.click(function () {
            if (searching) return false;
            if (orders.length == 0) {
                alert("请先填写单号");
            } else if (orders.length > 20) {
                alert("最多填写20个单号");
            } else {
                searching = true;
                $.ajax({
                    url: '@Url.Action("way", "bill")',
                    type: 'post',
                    dataType: 'json',
                    data: { nos: orders.join(',') },
                    success: function (data) {
                        $searchResult.empty();
                        if (data.code == 0) {
                            if (!data.data || !data.data.length) {
                                alert("未查询到对应的运单");
                            } else {
                                for (var i = 0; i < data.data.length; i++) {
                                    $searchResult.append(createReasultItem(data.data[i]));
                                }
                            }
                        } else {
                            alert(data.msg);
                        }
                    },
                    error: function () { alert('网络错误，请重试'); }
                }).always(function () { searching = false; })
            }
            return false;
        });

        function createReasultItem(data) {
            var html = '<div>' +
                            '<table>' +
                                '<caption>订单号:<span>' + data.No + '</span>;当前状态:<span>' + data.StateName + '</span></caption>';

            if (data.InternalNo) {
                html += '<tr>' +
                            '<td colspan ="3" class="internal-express">' +
                                '国内快递：' + data.InternalExpress + '，快递单号：' +
                                '<a target="_blank" href="http://www.kuaidi100.com/chaxun?com=' + encodeURIComponent(data.InternalExpress || '') + '&nu='+ data.InternalNo +'">' + data.InternalNo + '</a>' +
                            '</td>'
                        '</tr>';
            }

            html +=             '<tr>' +
                                    '<th>处理时间</th>' +
                                    '<th>订单状态</th>' +
                                    '<th>备注</th>' +
                                '</tr>';

            if(data.Histories){
                for (var i = 0; i < data.Histories.length; i++) {
                    html += '<tr>' +
                                '<td>' + data.Histories[i].Created + '</td>' +
                                '<td>' + data.Histories[i].StateName + '</td>' +
                                '<td>' + (data.Histories[i].Remarks || '') + '</td>' +
                            '</tr>';
                }
            }
            html += '</table>' +
                '</div>';

            return $(html);
        }

        function createItem(val) {
            if (val && !$.isArray(val, orders)) {
                var $elem = $('<div class="flex-cell order-num"><span>' + val + '</span><i class="iconfont icon-iconfonticonfontclose"></i></div>');
                $elem.find("i").click(function () {
                    $elem.remove();
                    removeItem(val);
                })
                $input.parent().before($elem);
                orders.push(val);
                $input.val('');
            }
        }

        function removeItem(val) {
            var newOrders = [];
            for (var i = 0; i < orders.length; i++) {
                if (val != orders[i]) {
                    newOrders.push(orders[i]);
                }
            }
            orders = newOrders;
        }
    });
</script>
